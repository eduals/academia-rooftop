{
  "name": "academia-rooftop-tailwind",
  "version": "1.0.0",
  "description": "Tailwind CSS v4 setup for HubSpot CMS",
  "scripts": {
    "build": "npx tailwindcss -i ./css/input.css -o ./academia-rooftop/css/tailwind.css",
    "build:all": "npx tailwindcss -i ./css/input.css -o ./academia-rooftop/css/tailwind.css --no-content",
    "dev": "npx tailwindcss -i ./css/input.css -o ./academia-rooftop/css/tailwind.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.11"
  },
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "flowbite": "^3.1.2"
  }
}
